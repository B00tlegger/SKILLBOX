<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="root" fileName="logs/root.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="search" fileName="logs/search.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="inputErrors" fileName="logs/input_errors.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="exceptions" fileName="logs/exceptions.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </appenders>

    <Loggers>
        <Logger name= "inputErrors" level="info" additivity="false">
            <AppenderRef ref="inputErrors"/>
        </Logger>

        <Logger name= "search" level="info" additivity="false">
            <AppenderRef ref="search"/>
        </Logger>

        <Logger name="exceptions" level="debug" additivity="false">
            <AppenderRef ref="exceptions"/>
        </Logger>
        <Root level="all">
            <AppenderRef ref="root"/>
        </Root>
    </Loggers>
</configuration>